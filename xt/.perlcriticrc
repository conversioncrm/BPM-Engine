severity  = 3

[-TestingAndDebugging::RequireUseStrict]
[-TestingAndDebugging::RequireUseWarnings]
[-Subroutines::RequireFinalReturn]
[-ErrorHandling::RequireCarping]
[-ErrorHandling::RequireCheckingReturnValueOfEval]

[Variables::ProhibitPackageVars]
add_packages = Log::Dispatch::Config

[Subroutines::ProhibitExcessComplexity]
max_mccabe = 45

[-RegularExpressions::RequireExtendedFormatting]
strict = 1
minimum_regex_length_to_complain_about = 10

[Subroutines::ProhibitUnusedPrivateSubroutines]
allow = _build_schema _build_logger _build_process _build_graph _build_evaluator


[CodeLayout::RequireTidyCode]
severity  = 2
perltidyrc = xt/perltidyrc


[CodeLayout::ProhibitTrailingWhitespace]
#severity  = 3

#[TestingAndDebugging::ProhibitNoStrict]
#allow=refs

[-Documentation::RequirePODUseEncodingUTF8]
[-CodeLayout::RequireUseUTF8]
